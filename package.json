{
  "name": "gangjun-website",
  "scripts": {
    "postinstall": "elm-tooling install",
    "start-elm": "elm-pages dev",
    "browser": "browser-sync start --proxy \"localhost:1234\" --files \"public/*.css\" ",
    "start": "concurrently \"npm run start-elm\" \"npm run tw\" \"npm run browser\"",
    "tw": "tailwindcss -i ./tailwind.css -o ./public/tw.css --watch",
    "tw-build": "tailwindcss -i ./tailwind.css -o ./public/tw.css -m",
    "build": "npm run tw-build && elm-pages build"
  },
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "concurrently": "^7.0.0",
    "elm-optimize-level-2": "0.2.3",
    "elm-pages": "2.1.10",
    "elm-review": "^2.5.5",
    "elm-tooling": "^1.4.0",
    "tailwindcss": "^3.0.23"
  }
}
